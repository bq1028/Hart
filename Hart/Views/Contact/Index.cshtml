@model Hart.Models.ContactForm


@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div id="contact-page-header" class="row content-heading remove-row-margins">
        <h1>We would like to hear from you</h1>
    </div>

    <div class="row">
        <!-- Map Column -->
        <div class="col-lg-8 mb-4">
            <!-- Embedded Google Map -->
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3988.8184072040717!2d36.81403751526534!3d-1.2827773359854269!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x182f10d239cc2ba1%3A0x84be6135dd8814ca!2sView+Park+Towers%2C+Utalii+St%2C+Nairobi%2C+Kenya!5e0!3m2!1sen!2suk!4v1562082089759!5m2!1sen!2suk" width="600" height="450" frameborder="1" style="border:0" allowfullscreen></iframe>
        </div>

        <!-- Contact Details Column -->
        <div class="col-lg-4 mb-4">
            <h3>Contact Details</h3>
            <p>
                View Park Towers, 1st Floor Suite 3
                <br>Monrovia Street
                <br>Utalii Lane
                <br>Nairobi, Kenya
                <br>
            </p>
            <p>
                <abbr title="Phone">P</abbr>:	(+254) 20 800 243
            </p>
            <p>
                <abbr title="Mobile">M</abbr>:	(+254) 724 338 834
            </p>
            <p>
                <abbr title="Mobile">M</abbr>:	(+254) 780 338 834
            </p>
            <p>
                <abbr title="Mobile">M</abbr>:	(+254) 721 913 292
            </p>
            <p>
                <abbr title="Email">E</abbr>:
                <a href="mailto:info@h-artofafricasafaris.com">
                    info@h-artofafricasafaris.com
                </a>
            </p>
            <p>
                <abbr title="Hours">H</abbr>: Monday to Saturday 7:00 AM to 8:00 PM
            </p>
        </div>
    </div>

    <div id="contact-form" class="row">    
        <div class="col-md-6">
            <form asp-action="SubmitForm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="control-label"></label>                    
                    <textarea rows="10" cols="80" asp-for="Message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Send Message" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


